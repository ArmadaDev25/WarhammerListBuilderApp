<%- include('./partials/header') %>

<section id="mainbody">
<img src="<%=currentList.ArmyInfo[0].armyLogo%>" width="70" height="50">
<h2>
    <%=currentList.listName%>
</h2>

<section id="liinfo">
<section class="iPanel">
<h3>
    Army Info
</h3>
<p>
    Faction: <%=currentList.ArmyInfo[0].name%> <br>
    Created By: <%=currentList.author%>
</p>
<h3>
    Units
</h3>
<% for (let x in currentList.unitsInList) {%>
<p>
    <%=currentList.unitsInList[x].unitName%>
</p>
<%}%>
</section>

<section class="iPanel" >
<h3>
    Army Rule
</h3>
<img src="<%=currentList.ArmyInfo[0].armyRule%>">
</section>
</section>
</section>
<form action="/list/<%=currentList%>/comment" method="POST">
    Author: <input required type="text" name="author">
    Comment: <textarea required name="comment"></textarea>
    <input type="submit" value="Add Comment">
</form>

<%- include('./partials/footer') %>